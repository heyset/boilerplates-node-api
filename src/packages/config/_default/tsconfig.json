{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@errors": ["src/errors"],
      "@errors/*": ["src/errors/*"]
    },
  },
  "exclude": [
    "./node_modules"
  ]
}